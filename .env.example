# ServiceNow Configuration
SERVICENOW_INSTANCE_URL=https://your-instance.service-now.com

# JWT Authentication Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Alternative: OAuth 2.0 Configuration (if not using JWT)
SERVICENOW_CLIENT_ID=your-oauth-client-id
SERVICENOW_CLIENT_SECRET=your-oauth-client-secret

# MCP Server Configuration
MCP_SERVER_NAME=servicenow-knowledge-server
MCP_SERVER_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Authentication Configuration
AUTH_TIMEOUT_SECONDS=300
SESSION_REFRESH_THRESHOLD_SECONDS=600
MAX_CONCURRENT_SESSIONS=100

# ServiceNow API Configuration
SERVICENOW_API_TIMEOUT=30
SERVICENOW_MAX_RETRIES=3
SERVICENOW_RETRY_DELAY=1
